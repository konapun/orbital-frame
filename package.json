{
  "name": "orbital-frame",
  "description": "Command line as a chatbot",
  "main": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konapun/orbital-frame.git"
  },
  "author": "konapun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/konapun/orbital-frame/issues"
  },
  "homepage": "https://github.com/konapun/orbital-frame#readme",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "NODE_ENV=production lerna exec --parallel -- babel --root-mode upward src -d dist",
    "watch": "NODE_ENV=production lerna exec --parallel -- babel --root-mode upward src -d dist --watch",
    "clean": "lerna clean && lerna exec --parallel -- rm -rf dist",
    "dev": "yarn bootstrap && yarn build",
    "lerna:publish": "lerna publish",
    "lint": "eslint --ignore-path .eslintignore .",
    "lint:fix": "eslint --fix --ignore-path .eslintignore .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:core": "lerna run --scope @orbital-frame/core test:coverage",
    "version:patch": "lerna version patch",
    "version:minor": "lerna version minor",
    "version:major": "lerna version major"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-external-helpers": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.3",
    "babel-plugin-source-map-support": "^2.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.5.1",
    "husky": "^2.4.0",
    "jest": "^25.2.3",
    "jest-extended": "^0.11.5",
    "lerna": "^3.14.1"
  }
}
